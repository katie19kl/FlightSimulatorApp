<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">

    <Grid Background="Yellow" MouseLeftButtonUp="ButtonMouse_Up">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="475*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="319" Margin="663,352,0,-0.333" VerticalAlignment="Top" Width="530" Grid.ColumnSpan="2">
            <local:Joystick HorizontalAlignment="Left" Height="100"
                            VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Margin="130,0,0,0"
                            x:Name="Joystick_Var">
                <local:Joystick.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </local:Joystick.RenderTransform>
            </local:Joystick>
            <Slider x:Name="slider1ValuesMinus1To1" HorizontalAlignment="Left" VerticalAlignment="Top"
                Height="35" Width="273" Margin="100,120,0,0" TickPlacement="BottomRight"
                    TickFrequency="0.25" Minimum="-1" Maximum="1" Foreground="Black" Background="#FFFFFA00">
                <Slider.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="3"/>
                </Slider.LayoutTransform>
            </Slider>
            <Slider x:Name="slider2Values0To1"
                Height="35" Width="228" TickPlacement="BottomRight" IsDirectionReversed="True"
                TickFrequency="0.135" Minimum="0" Maximum="1" Foreground="Black" Background="#FFF5FF00" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,-190,-93,0">
                <Slider.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90.245"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Slider.RenderTransform>
                <Slider.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="3"/>
                </Slider.LayoutTransform>
            </Slider>
        </StackPanel>



    </Grid>

</Window>
